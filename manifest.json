{
  "manifest_version": 3,
  "name": "Declutterer",
  "version": "1.1",
  "description": "A toggleable calm-mode declutterer for neurodivergent users â€” removes sensory overload and simplifies pages.",
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icons/calm.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  "icons": {
  }
}
