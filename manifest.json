{
  "manifest_version": 3,
  "name": "Neurofriendly YT Music (Minimal)",
  "version": "0.0.1",

  "permissions": [
    "storage"
  ],

  "host_permissions": [
    "https://music.youtube.com/*",
    "https://declutter-proxy.vercel.app/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["https://music.youtube.com/*"],
      "js": ["content.js"],
      "css": ["popup.css"]
    }
  ],

  "action": {
    "default_popup": "popup.html"
  }
}
